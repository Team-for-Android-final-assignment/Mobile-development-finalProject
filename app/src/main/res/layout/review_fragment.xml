<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="301dp"
        android:layout_height="301dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp">

        <!--竖分割线-->
        <TextView
            android:id="@+id/vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"/>

        <TextView
            android:id="@+id/horizon"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@android:color/background_light"/>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/horizon"
            android:layout_toLeftOf="@id/vertical"
            app:cardBackgroundColor="@color/myBlue">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="答错词数"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="8"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/horizon"
            android:layout_toRightOf="@id/vertical"
            app:cardBackgroundColor="@color/myYellow">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="掌握词数"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="40"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/horizon"
            android:layout_toLeftOf="@id/vertical"
            app:cardBackgroundColor="@color/myYellow">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="学习难度"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="四级英语"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/horizon"
            android:layout_toRightOf="@id/vertical"
            app:cardBackgroundColor="@color/myBlue">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="总共学习"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="18"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/setting"
            android:layout_width="150dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/myBlue"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/setting"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="锁屏设置"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/wrong"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="错题本"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@android:color/holo_orange_dark"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/notebook"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="笔记本"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
